<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <ul>
        <li class="sort"><a href="#tab1" class="current">新しい順</a></li>
        <li class="sort">|</li>
        <li class="sort"><a href="#tab2">評価の高い順</a></li>
      </ul>
      <div id="contents">
        <div id="tab1"><%= render 'index', books: @books%></div>
        <div id="tab2"><%= render 'index', books: @books_rate%></div>
      </div>
    </div>
  </div>
</div>
<script>
  $(function(){
    $('#contents div[id != "tab1"]').hide();
    $("a").click(function(){
      $("#contents div").hide();
      $($(this).attr("href")).show();
      $(".current").removeClass("current");
      $(this).addClass("current");
      return false;
    });
  });
</script>